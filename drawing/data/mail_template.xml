<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data noupdate="1">
        <record id="boq_email_template" model="mail.template">
            <field name="name">Bill Of Quantity: Send by email</field>
            <field name="model_id" ref="drawing.model_construction_drawing"/>
            <field name="email_from">${object.project_id.user_id.login |safe}</field>
            <field name="email_to">${object.project_id.partner_id.email}</field>
            <field name="subject">Bill Of Quantity (Ref ${object.name_seq})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.project_id.partner_id}
                        <br /><br />
                        Here is your patient card with reference ${object.name_seq}
                        <br /><br />
                        If you have queries feel free to ask.
                    </p>
                </div>
            </field>
            <field name="report_template" ref="report_quotation"/>
            <field name="report_name">BOQ_${(object.name_seq)}</field>
        </record>
    </data>
</odoo>